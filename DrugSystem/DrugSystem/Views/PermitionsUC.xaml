<UserControl x:Class="DrugSystem.PermitionsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DrugSystem">
    <GroupBox Header="הרשאות" FlowDirection="RightToLeft" Style="{x:Null}">
        <StackPanel>
            <CheckBox Content="הנפקת מרשמים" IsChecked="{Binding CanCreatePrescriptions}"/>
            <CheckBox Content="הוספת רופא חדש" IsChecked="{Binding CanAddDoctor}"/>
            <CheckBox Content="הוספת מטופל חדש" IsChecked="{Binding CanAddPatient}" />
            <CheckBox Content="הוספת תרופה למערכת" IsChecked="{Binding CanAddMedicine}"/>
        </StackPanel>
    </GroupBox>
</UserControl>
