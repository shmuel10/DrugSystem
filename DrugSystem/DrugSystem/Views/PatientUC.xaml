<UserControl x:Class="DrugSystem.Views.PatientUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"           
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DrugSystem.Views" 
             xmlns:system1="clr-namespace:System;assembly=mscorlib" 
             xmlns:local1="clr-namespace:DrugSystem.Converters"
             xmlns:local2="clr-namespace:DrugSystem.Command"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" FlowDirection="RightToLeft">
    <UserControl.Resources>
        <system1:Double x:Key="ButtonSize">30</system1:Double>
        <local1:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <local2:NewVisitCommand x:Key="NewVisit"/>
    </UserControl.Resources>
    <Grid Background="WhiteSmoke">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1" >
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <materialDesign:Card Margin="5" UniformCornerRadius="20">
                <GroupBox Style="{x:Null}" FontWeight="UltraBlack" Margin="5" BorderBrush="Transparent" Header="פרטים אישיים">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="PatientID" Width="130" Height="18" Text="תעודת זהות" Margin="10"/>
                            <TextBlock x:Name="PatientName" Width="130" Height="18" Text="שם" Margin="10"/>
                            <TextBlock x:Name="PatientFatherName" Width="130" Height="18" Text="שם האב" Margin="10"/>
                            <TextBlock x:Name="PatientBirthDate" Width="130" Height="18" Text="תאריך לידה" Margin="10"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="1">
                            <TextBlock x:Name="PatientEmailAddress" Width="130" Height="18" Text="דואר אלקטרוני" Margin="10"/>
                            <TextBlock x:Name="PatientWeight" Width="130" Height="18" Text="משקל" Margin="10"/>
                            <TextBlock x:Name="PatientPhoneNumber" Width="130" Height="18" Text="מספר טלפון" Margin="10"/>
                            <TextBlock x:Name="PatientGender" Width="130" Height="18" Text="מין" Margin="10"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

            </materialDesign:Card>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <materialDesign:Card Margin="5" UniformCornerRadius="20">
                    <GroupBox Style="{x:Null}" Margin="5" FontWeight="UltraBlack" BorderBrush="Transparent" Header="בעיות פעילות">
                        <ListView/>
                    </GroupBox>
                </materialDesign:Card>
                <materialDesign:Card Margin="5" UniformCornerRadius="20" Grid.Column="1">
                    <GroupBox Style="{x:Null}" Margin="5" FontWeight="UltraBlack" BorderBrush="Transparent" Header="תרופות קבועות">
                        <ListView/>
                    </GroupBox>
                </materialDesign:Card>
                <materialDesign:Card Margin="5" UniformCornerRadius="20" Grid.Column="2">
                    <GroupBox Style="{x:Null}" Margin="5" FontWeight="UltraBlack" BorderBrush="Transparent" Header="מרשמים בתוקף">
                        <ListView/>
                    </GroupBox>
                </materialDesign:Card>
                <materialDesign:Card Margin="5" UniformCornerRadius="20" Grid.Row="1" Grid.ColumnSpan="3">
                    <GroupBox Style="{x:Null}" Margin="5" FontWeight="UltraBlack" BorderBrush="Transparent" Header="היסטוריית ביקורים">
                        <ListView/>
                    </GroupBox>
                </materialDesign:Card>
            </Grid>
        </Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Background="Transparent" x:Name="ContainGrid" Visibility="Visible">
            <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Visibility="{Binding ElementName=ContainGrid, Path=IsMouseOver, Converter={StaticResource BoolToVisibility}}">
                <Button x:Name="First" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10" Background="CadetBlue" Style="{StaticResource MaterialDesignFloatingActionDarkButton}" 
                ToolTip="ביקור חדש" Command="{StaticResource NewVisit}" CommandParameter="Doctor" Height="{StaticResource ButtonSize}" Width="{StaticResource ButtonSize}">
                    <materialDesign:PackIcon Kind="Add" Height="{StaticResource IconSize}" 
                                     Width="{StaticResource IconSize}"/>
                </Button>
                <Button x:Name="Second" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10" Background="CadetBlue" Style="{StaticResource MaterialDesignFloatingActionDarkButton}" 
                ToolTip="מרשם חדש" Command="{Binding NewWorkerCommand}" CommandParameter="Doctor" Height="{StaticResource ButtonSize}" Width="{StaticResource ButtonSize}">
                    <materialDesign:PackIcon Kind="Add" Height="{StaticResource IconSize}" 
                                     Width="{StaticResource IconSize}"/>
                </Button>
            </StackPanel>
            <Ellipse x:Name="MenuIcon" Height="60" Width="60" VerticalAlignment="Bottom" Margin="10" Visibility="Visible">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/Icons/MenuIcon.png"/>
                </Ellipse.Fill>
            </Ellipse>
        </StackPanel>
    </Grid>
</UserControl>
