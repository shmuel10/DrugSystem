<UserControl x:Class="DrugSystem.DoctorUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DrugSystem"
             FlowDirection="RightToLeft"
             mc:Ignorable="d" >
    <Grid Background="WhiteSmoke" Margin="20 0 20 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <local:SearchLineUC Grid.Row="0"/>
        <ListView x:Name="DoctorsList" SelectedItem="{Binding SelectedPatient}" Grid.Row="1" Style="{x:Null}" Background="White" MinHeight="400">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="תעודת זהות" Width="150" DisplayMemberBinding="{Binding ID}" />
                    <GridViewColumn Header="שם פרטי" Width="150" DisplayMemberBinding="{Binding FirstName}" />
                    <GridViewColumn Header="שם משפחה" Width="150" DisplayMemberBinding="{Binding LastName}" />
                    <GridViewColumn Header="כתובת" Width="150" DisplayMemberBinding="{Binding Address.City}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
