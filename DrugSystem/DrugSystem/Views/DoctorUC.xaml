                                    <Binding  Path="BuildingNumber" />
                                </MultiBinding>
                            </GridViewColumn.DisplayMemberBinding>
                        </GridViewColumn>
                        <GridViewColumn Header="משקל" Width="150" DisplayMemberBinding="{Binding Weight}" />
                        <GridViewColumn Header="רופא משפחה" Width="150" DisplayMemberBinding="{Binding FamilyDoctor}" />
                    </GridView>
                </ListView.View>
            </ListView>-->
            <Frame Visibility="{Binding Source={x:Static Application.Current}, Path=FrameVisibility,
                Converter={StaticResource BooleanToVisibilityConverter}}"
                       Content="{Binding Path=OnFrame, Source={x:Static Application.Current}}"/>
        </Grid>
    </Grid>
</UserControl>
