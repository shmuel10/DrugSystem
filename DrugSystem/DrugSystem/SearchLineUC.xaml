<UserControl x:Class="DrugSystem.SearchLineUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DrugSystem"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800" FlowDirection="LeftToRight">
    <Border BorderThickness="1" BorderBrush="DarkBlue">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="SearchIcon" MaxHeight="40" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Source="Icons/SearchIcon.png" Grid.Column="1"/>
        <TextBox x:Name="SearchLine" Background="White" FlowDirection="RightToLeft" FontSize="23" MaxHeight="50" TextWrapping="Wrap" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="0"/>
      </Grid>
    </Border>
</UserControl>
